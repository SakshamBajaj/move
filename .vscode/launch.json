// This file defines launch configurations for Visual Studio Code.
//
// When VS Code is used to open the directory containing this repository (which contains this launch
// configuration at its root), it reads the values in this file and presents the user with launch
// options in its "Run and Debug" view.
//
// The launch configurations below allow the VS Code user to, for example:
// * Launch a new VS Code window that has the extension in this repository installed and enabled.
// * Launch a new VS Code window to run the extension's tests.
//
// When viewing this file in VS Code, you may use IntelliSense to learn about possible attributes,
// or hover to view descriptions of existing attributes. For more information, visit:
// https://go.microsoft.com/fwlink/?linkid=830387
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch with Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/language/move-analyzer/editors/code"
            ],
            "preLaunchTask": "Pretest"
        },
        {
            "name": "VS Code Tokenizer Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/language/move-analyzer/editors/code/tests",
                "--extensionDevelopmentPath=${workspaceFolder}/language/move-analyzer/editors/code",
                "--extensionTestsPath=${workspaceFolder}/language/move-analyzer/editors/code/out/tests/index.js"
            ],
            "outFiles": ["${workspaceFolder}/language/move-analyzer/editors/code/out/tests/**/*.js"],
            "preLaunchTask": "Pretest"
        },
        {
            "name": "(lldb) move build Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/move-build",
            "args": [
                "-m",
                "-a",
                "std=0x1",
                "--flavor",
                "flavors/",
                "${workspaceFolder}/language/move-prover/tests/sources/functional/verify_vector.move",
                "-d",
                "${workspaceFolder}/language/move-stdlib/sources/vector.move"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/move/language",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "move prover debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/move-prover",
            "args": [
                "--config=${workspaceFolder}/language/move-prover/mvp-config.toml",
                "--dump-bytecode",
                "--dump-cfg",
                "--rapid",
                "${workspaceFolder}/language/move-prover/tests/sources/functional/verify_reverse.move", 
                // "--print-config",              
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/language/move-prover/tests/xsources/design/verify_reverse_bytecode",
            "environment": [
                {
                    "name": "PATH",
                    "value": "/Users/s24bajaj/bin:/Users/s24bajaj/.cargo/bin:$PATH",
                },
                {
                    "name": "PATH",
                    "value": "/Users/s24bajaj/.dotnet/tools:$PATH",
                },
                {
                    "name": "DOTNET_ROOT",
                    "value": "/Users/s24bajaj/.dotnet",
                },
                {
                    "name": "Z3_EXE",
                    "value": "/Users/s24bajaj/bin/z3",
                },
                {
                    "name": "CVC5_EXE",
                    "value": "/Users/s24bajaj/bin/cvc5",
                },
                {
                    "name": "BOOGIE_EXE",
                    "value": "/Users/s24bajaj/.dotnet/tools/boogie",
                },
            ],
            "externalConsole": false,
            "MIMode": "lldb"
        }
    ]
}
